<article class="existing-posts">
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <textarea name="post-text">{{post.post_text}}</textarea>
    </div>
    <div class="created-by">
      This Post Was Created By You On {{format_date post.created_at}}
      |
      <a class="comments-link" href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div>
    <button type="submit">SAVE POST</button>
    </div>
    <button type="button" class="button">DELETE POST</button>
    
  </form>
</article>

<form class="comment-form">
  <h2>Comment On This Post</h2>
  <div>
    <textarea name="comment-text"></textarea>
  </div>
  <div>
    <button type="submit">ADD COMMENT</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>